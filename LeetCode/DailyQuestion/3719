class Solution:
    def longestBalanced(self, nums: List[int]) -> int:
        n = len(nums)
        ans = 0

        for l in range(n):
            evenSet = set()
            oddSet = set()

            for r in range(l, n):
                if nums[r] % 2 == 0:
                    evenSet.add(nums[r])
                else:
                    oddSet.add(nums[r])

                if len(evenSet) == len(oddSet):
                    ans = max(ans, r - l + 1)

        return ans
